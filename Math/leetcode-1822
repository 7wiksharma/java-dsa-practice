class Solution {
    public int arraySign(int[] nums) {
        int product = 1;

        for (int x : nums) {
            if (x == 0) return 0;     
            if (x < 0) product = -product;  
        }

        return signFunc(product);
    }

    public static int signFunc(int product) {
        if (product > 0) return 1;
        else if (product < 0) return -1;
        return 0;
    }
}
