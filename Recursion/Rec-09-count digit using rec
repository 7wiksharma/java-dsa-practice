Rec-09 - count digit in a no.using recursion;

public class Main
{
    //Count digits in a number               45678 â†’ 5
    public static int count(int n)
    {
        int cnt =0;
        if(n==0)
        {
            return 0;
        }
        return  1 + count(n/10);
    }
	public static void main(String[] args) {
//		System.out.println("Hello World");
int ans = count(45678);
System.out.println(ans);
	}
}
